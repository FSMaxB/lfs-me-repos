pkgbuild_version=5
pkgname=xinit
pkgver=1.3.3

dependencies=(
	"!$pkgname"
	'twm'
	'xclock'
	'xterm'
)
sources=(
	"http://xorg.freedesktop.org/releases/individual/app/${pkgname}-${pkgver}.tar.bz2"
)
sha1sums=(
	c3c01c8c6012317f995669894d9e7b2838b61e58
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"

	./configure $XORG_CONFIG --with-xinitdir=/etc/X11/xinit
}

lfs_me_build() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make &&

	cat > xserverrc << "EOF"
#!/bin/sh
if [ -z "$XDG_VTNR" ]; then
	exec /usr/bin/X -nolisten tcp "$@"
else
	exec /usr/bin/X -nolisten tcp "$@" vt$XDG_VTNR
fi
EOF
}

lfs_me_check() {
	return
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	make DESTDIR="$fakeroot_dir" install &&

	install -v -D xserverrc "${fakeroot_dir}/etc/X11/xinit/xserverrc"
}

