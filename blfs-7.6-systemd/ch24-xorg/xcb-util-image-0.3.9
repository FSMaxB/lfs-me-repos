pkgbuild_version=5
pkgname=xcb-util-image
pkgver=0.3.9

dependencies=(
	"!$pkgname"
	'xcb-util'
)
sources=(
	"http://xcb.freedesktop.org/dist/${pkgname}-${pkgver}.tar.bz2"
)
sha1sums=(
	afeba6230400fe8bec6076fd07bf20a8e412bbb5
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"

	./configure $XORG_CONFIG
}

lfs_me_check() {
	cd "${build_dir}/${pkgname}-${pkgver}"
	LD_LIBRARY_PATH="${XORG_PREFIX}/lib" make check
}

