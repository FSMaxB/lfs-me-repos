	'font-xfree86-type1'
)

lfs_me_prepare() {
	return
}

lfs_me_build() {
	return
}

lfs_me_check() {
	return
}

lfs_me_install() {
	cd "${build_dir}"
	install -v -d -m755 "${fakeroot_dir}/usr/share/fonts" &&
	ln -svfn "${XORG_PREFIX}/share/fonts/X11/OTF" "${fakeroot_dir}/usr/share/fonts/X11-OTF" &&
	ln -svfn "${XORG_PREFIX}/share/fonts/X11/TTF" "${fakeroot_dir}/usr/share/fonts/X11-TTF"
}

