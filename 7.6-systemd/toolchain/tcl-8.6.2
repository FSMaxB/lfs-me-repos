pkgbuild_version=5
pkgname=tcl
pkgver=8.6.2

dependencies=(
    "!$pkgname"
	'gcc-pass2'
    'zlib'
)
sources=(
	"http://downloads.sourceforge.net/project/tcl/Tcl/8.6.2/tcl8.6.2-src.tar.gz"
)
sha1sums=(
    f01ee98da154f83ce4b1c2db752decf734384954
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}${pkgver}-src.tar.gz" -C "$build_dir"

	cd "${build_dir}/${pkgname}${pkgver}/unix"

	./configure --prefix=/tools
}

lfs_me_build() {
	cd "${build_dir}/${pkgname}${pkgver}/unix"
    make
}

lfs_me_check() {
	cd "${build_dir}/${pkgname}${pkgver}/unix"
	TZ=UTC make test
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}${pkgver}/unix"
	make DESTDIR="$fakeroot_dir" install
    make DESTDIR="$faekroot_dir" install-private-headers

    ln -sv tclsh8.6 "${fakeroot_dir}/tools/bin/tclsh"
}

